<Window x:Class="App_CompanyEmployees.Win_EditDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_CompanyEmployees"
        mc:Ignorable="d"
        Title="Измение списка департаментов" Height="200" Width="350" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Label Content="Название отдела:" HorizontalAlignment="Center" Margin="0,20,0,84" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Center" Height="25" Margin="0,50,0,56" VerticalAlignment="Top" Width="250" RenderTransformOrigin="0.664,1.71"/>
        <Button x:Name="saveButton" IsDefault="True" Content="Сохранить" Margin="30,0,0,30" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="75" Click="saveButton_Click"/>
        <Button x:Name="cancelButton" IsCancel="True" Content="Отменить" Margin="0,0,30,30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Click="cancelButton_Click"/>
    </Grid>
</Window>
